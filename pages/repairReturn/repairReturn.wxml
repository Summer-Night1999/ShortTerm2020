<!--pages/repairReturn/repairReturn.wxml-->
<!-- 故障回访页面 -->
<view class="Nav" style="width:100%">
    <text>故障回访情况</text>
</view>
<view class="menuButton">
    <button class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">今天</button>
    <button class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">昨天</button>
    <button class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">一周内</button>
</view>
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
  <swiper-item>
    <view>
     <text>a</text>
    </view>
  </swiper-item>

  <swiper-item>
    <view>
     <text>b</text>
    </view>
  </swiper-item>

  <swiper-item>
    <view>
     <text>c</text>
    </view>
  </swiper-item>
  
</swiper>