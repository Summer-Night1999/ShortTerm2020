<!--pages/addOrder/addOrder.wxml-->
<view class="menuButton">
    <button class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">现场维修</button>
    <button class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">远程维修</button>
</view>
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 31}}px" bindchange="bindChange">
  <swiper-item>
    <view class="layout_vertical">
      <view class="layout_horizontal" style="flex:1">
      <view class="layout_vertical" style="flex:1">
      <view class="weui-cells__title">请输入维修人姓名</view>
      <input class="weui-input" bindinput="bindname"/>
      <view class="weui-cells__title">请输入联系电话</view>
      <input class="weui-input" bindinput="bindnumber"/>
    </view>
    
  </view>
  <view style="flex:5">
    <form bindsubmit="bindFormSubmit">
     <textarea placeholder="form 中的 textarea" name="textarea"/>
     <button form-type="submit"> 提交 </button>
    </form>
  </view>
  <view style="flex:1"  class="layout_horizontal">
    <view>
      <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
      <view class="picker">
        预约维修日期: {{date}}
      </view>
      </picker>
     <picker mode="time" value="{{time}}" start="09:01" end="21:01" bindchange="bindTimeChange">
      <view class="picker">
       预约维修时间: {{time}}
      </view>
      </picker>
    </view>
    <view>
      <button bindtap="confirm">确定</button>
    </view>
  </view>
</view>

  </swiper-item>

  <swiper-item>
    <view class="layout_vertical">
        <view class="layout_horizontal" style="flex:1">
        <view class="layout_vertical" style="flex:1">
        <view class="weui-cells__title">请输入维修人姓名</view>
        <input class="weui-input" bindinput="bindname"/>
        <view class="weui-cells__title">请输入排查结果</view>
        <input class="weui-input" bindinput="bindResult"/>
        <view class="weui-cells__title">请输入排查说明</view>
        <input class="weui-input" bindinput="bindresultDesc"/>
      </view>
      
    </view>
    <view style="flex:5">
      <form bindsubmit="bindFormSubmit">
      <textarea placeholder="form 中的 textarea" name="textarea"/>
      <button form-type="submit"> 提交 </button>
       <button bindtap="confirm">确定</button>
      </form>
    </view>
    </view>

</swiper-item>
</swiper>


